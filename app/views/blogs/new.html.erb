<div class="recipe-contribution-contents">
  <header class="recipe-contribution-header">
    <%= link_to image_tag('sachiale-logo-title.png' , size: '185x50'), "/" %>

  </header>
  <div class="recipe-contribution-main">
    <h2 class="recipe-contribution-title">レシピ情報を入力</h2>
    <%= form_with model: @blog, local: true do |f| %>

    <%= render 'shared/error_messages', model: @blog %>

    <%# 投稿画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        出品画像
        <span class="indispensable">必須</span>
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"item-image", name: 'item[images][]' %>
        <div id="image-list"></div>
      </div>
    </div>
    <%# /投稿画像 %>
    <%# レシピ名とレシピ説明 %>
    <div class="new-blogs">
      <div class="weight-bold-text">
        レシピ名
        <span class="indispensable">必須</span>
      </div>
      <%= f.text_area :item_name, class:"blogs-text", id:"item-name", placeholder:"商品名（必須 40文字まで)", maxlength:"40" %>
      <div class="recipes-explain">
        <div class="weight-bold-text">
          レシピの説明
          <span class="indispensable">必須</span>
        </div>
        <%= f.text_area :explain, class:"recipes-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /レシピ名とレシピ説明 %>
    <%# 材料費合計 %>
    <div class="dish-price">
      <div class="weight-bold-text question-text">
        <span>販売価格</span>
        <a class="question" href="#">?</a>
      </div>
        <div class="price-content">
          <div class="price-text">
            <span>価格</span>
            <span class="indispensable">必須</span>
          </div>
          <span class="sell-yen">¥</span>
          <%= f.text_field :price, class:"price-input", id:"item-price", placeholder:"例）300" %>
        </div>
    </div>
    <%# /材料費合計 %>
    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "出品する" ,class:"sell-btn" %>
      <%=link_to 'もどる', root_path, class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
</div>