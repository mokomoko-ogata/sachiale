<%# CSS・・・assets/stylesheets/shared/header.css %>
<header class='top-page-header'>
  <div class='search-bar-contents'>
    <%= link_to image_tag("sachiale-logo-color.png", class:"sachiale-icon"), "/" %>
    <%= link_to image_tag("sachiale-logo-title.png", class:"sachiale-icon-title"), "/" %>    
  </div>
  <div class='nav'>
    <ul class='lists-left'>
      <li><%= link_to 'カテゴリー', "#", class: "category-list" %></li>
      <li><%= link_to 'ブランド', "#", class: "brand-list" %></li>
    </ul>
    <ul class='lists-right'>
      <%# if user_signed_in? %>
        <li><%= link_to 'hoge', "#", class: "user-nickname" %></li>
        <li><%= link_to 'ログアウト', 'hoge', method: :delete, class: "logout" %></li> 
      <%# else %>
        <li><%= link_to 'ログイン', 'hoge', class: "login" %></li>
        <li><%= link_to '新規登録', 'hoge', class: "sign-up" %></li>
      <%# end %>
    </ul>
  </div>
</header>